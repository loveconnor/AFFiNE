{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch LoveNotes Cloud",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "lovenotes",
        "@lovenotes/server",
        "dev"
      ]
    },
    {
      "name": "Lanuch LoveNotes Web",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "lovenotes",
        "@lovenotes/web",
        "dev"
      ]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug LoveNotes Web",
      "url": "http://localhost:8080"
    }
  ]
}